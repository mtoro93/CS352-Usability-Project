<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/recipe_step_left"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_chevron_left_black_24dp"/>
            <TextView
                android:id="@+id/recipe_step_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Chocolate Cake"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
            <ImageButton
                android:id="@+id/recipe_step_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/recipe_step_directions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step #: Directions\n Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras volutpat posuere diam, et congue sapien tincidunt quis. Morbi eget eros porttitor, blandit sem at, molestie nisi."
            android:layout_margin="5dp"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/recipe_step_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/tacos" />
    </LinearLayout>
</ScrollView>
